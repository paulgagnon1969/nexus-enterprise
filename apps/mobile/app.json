{
  "expo": {
    "name": "Nexus Mobile",
    "slug": "nexus-mobile",
    "version": "1.7.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pg1969.nexusmobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Nexus Mobile uses the camera to capture photos for daily logs, scan documents, and record site conditions.",
        "NSPhotoLibraryUsageDescription": "Nexus Mobile accesses your photos to attach images to daily logs and reports."
      }
    },
    "android": {
      "package": "com.pg1969.nexusmobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      [
        "expo-camera",
        {
          "cameraPermission": "Nexus Mobile uses the camera to capture photos and scan documents."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Nexus Mobile accesses your photos to attach images to reports."
        }
      ],
      "expo-updates",
      "expo-secure-store",
      "expo-sharing",
      "expo-sqlite"
    ],
    "updates": {
      "url": "https://u.expo.dev/28b82c06-3d43-44f0-ba56-110645a13d80"
    },
    "runtimeVersion": "1.7.0",
    "extra": {
      "eas": {
        "projectId": "28b82c06-3d43-44f0-ba56-110645a13d80"
      }
    }
  }
}
